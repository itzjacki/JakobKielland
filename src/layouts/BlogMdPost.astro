---
import BaseMdPost from "@/layouts/BaseMdPost.astro";

const { frontmatter } = Astro.props;
---

<BaseMdPost title={frontmatter.title}>
  <h1>
    {frontmatter.title}
  </h1>

  {
    new Date(frontmatter.date).toLocaleDateString("en-US", {
      month: "long",
      day: "numeric",
      year: "numeric",
    })
  }

  <slot />
</BaseMdPost>
